<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rl_top_title_bg" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/iv_end_back" android:padding="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:src="@drawable/fq_ic_live_close" android:layout_marginStart="10dp"/>
        <TextView android:textSize="22sp" android:textColor="@color/fq_colorWhite" android:gravity="center_vertical" android:id="@+id/tv_live_end_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="38dp" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <TextView android:textSize="13sp" android:textColor="#9d9d9d" android:gravity="center" android:id="@+id/tv_live_end_tips" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="18dp"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_avatar_bg" android:background="@drawable/fq_shape_pay_end_gray_bg" android:paddingTop="25dp" android:paddingBottom="30dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="18dp" android:paddingStart="26dp" android:paddingEnd="26dp" android:layout_marginStart="22dp" android:layout_marginEnd="22dp">
        <ImageView android:layout_gravity="center_horizontal" android:id="@+id/iv_anchor_head" android:layout_width="62dp" android:layout_height="62dp"/>
        <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
            <TextView android:textSize="14dp" android:textColor="@color/fq_colorWhite" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/tv_nick_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="6dp" android:maxLines="1"/>
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_gender" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp"/>
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_badge" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp"/>
            <com.tomatolive.library.p136ui.view.custom.AnchorGradeView android:layout_gravity="center_vertical" android:id="@+id/anchor_grade_view" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="40dp">
            <TextView android:textSize="22sp" android:textColor="@color/fq_colorWhite" android:gravity="center" android:id="@+id/tv_gold" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
            <TextView android:textSize="22sp" android:textColor="@color/fq_colorWhite" android:gravity="center" android:id="@+id/tv_personal" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
            <TextView android:textSize="22sp" android:textColor="@color/fq_colorWhite" android:gravity="center" android:id="@+id/tv_time" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="13dp">
            <TextView android:textSize="14sp" android:textColor="#9d9d9d" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/fq_anchor_live_end_gold" android:layout_weight="1"/>
            <TextView android:textSize="14sp" android:textColor="#9d9d9d" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/fq_anchor_live_end_personal" android:layout_weight="1"/>
            <TextView android:textSize="14sp" android:textColor="#9d9d9d" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/fq_anchor_live_end_timer" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/ll_problem_tips_bg" android:background="@drawable/fq_shape_pay_end_gray_bg" android:padding="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="22dp" android:layout_marginStart="22dp" android:layout_marginEnd="22dp">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="14sp" android:textColor="@color/fq_colorWhite" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/fq_current_live_problem_tips" android:layout_weight="1"/>
            <TextView android:enabled="false" android:textSize="12sp" android:textColor="@color/fq_colorWhite" android:gravity="center" android:id="@+id/tv_submit" android:background="@drawable/fq_btn_pay_submit_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="48dp" android:minHeight="25dp" android:text="@string/fq_btn_submit"/>
        </LinearLayout>
        <EditText android:textSize="12sp" android:textColor="@color/fq_colorWhite" android:textColorHint="#9d9d9d" android:gravity="top|left" android:id="@+id/et_problem_desc" android:background="@drawable/fq_shape_pay_et_tips_bg" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:minHeight="86dp" android:hint="@string/fq_pay_problem_desc_hit" android:maxLength="150" android:paddingStart="10dp" android:paddingEnd="10dp"/>
    </LinearLayout>
    <TextView android:textSize="16sp" android:textColor="@color/fq_colorBtnTextPrimary" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/tv_home" android:background="@drawable/fq_btn_round_red_selector" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:minWidth="180dp" android:minHeight="40dp" android:text="@string/fq_btn_home"/>
</merge>
