<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/white" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="match_parent">
    <ImageView android:id="@+id/logo" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginRight="5dp" android:src="@drawable/ic_launcher"/>
    <TextView android:textColor="@color/color_2f2f2f" android:id="@+id/downloading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/uptate_ing" android:layout_toRightOf="@+id/logo" android:layout_centerHorizontal="true"/>
    <TextView android:textColor="@color/color_2f2f2f" android:gravity="right" android:id="@+id/tv_progress" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="5dp" android:text="@string/uptate_progress" android:layout_toRightOf="@+id/downloading" android:layout_centerHorizontal="true"/>
    <ProgressBar android:id="@+id/progress" android:background="@color/color_5d5d5d" android:layout_width="match_parent" android:layout_height="5dp" android:layout_marginTop="15dp" android:max="100" android:progressDrawable="@drawable/layer_progress_update" android:layout_toRightOf="@+id/logo" android:layout_below="@+id/downloading" style="?android:attr/progressBarStyleHorizontal"/>
</RelativeLayout>
