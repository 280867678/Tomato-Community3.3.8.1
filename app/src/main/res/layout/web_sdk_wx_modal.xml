<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@android:color/white" android:paddingTop="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="16sp" android:textStyle="bold" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="标题" android:layout_centerHorizontal="true"/>
    <TextView android:textSize="14sp" android:id="@+id/tv_msg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="message" android:layout_below="@+id/tv_title" android:layout_centerHorizontal="true"/>
    <View android:id="@+id/line_h" android:background="@android:color/darker_gray" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="10dp" android:layout_below="@+id/tv_msg"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/line_h">
        <LinearLayout android:layout_width="match_parent" android:layout_height="50dp">
            <TextView android:gravity="center" android:id="@+id/btn_no" android:layout_width="0dp" android:layout_height="match_parent" android:text="否" android:layout_weight="1"/>
            <TextView android:gravity="center" android:id="@+id/btn_yes" android:layout_width="0dp" android:layout_height="match_parent" android:text="是" android:layout_weight="1"/>
        </LinearLayout>
        <View android:id="@+id/line_v" android:background="@android:color/darker_gray" android:layout_width="1px" android:layout_height="50dp" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
