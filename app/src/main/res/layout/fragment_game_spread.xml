<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.p002v4.widget.NestedScrollView android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:id="@+id/iv_top_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/game_tab_top_bg" android:scaleType="centerCrop" app:layout_constraintTop_toTopOf="0"/>
            <RelativeLayout android:background="@drawable/game_spread_withdraw_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_16" android:layout_marginRight="@dimen/dimen_16">
                <LinearLayout android:orientation="horizontal" android:id="@+id/ll_fenhong" android:paddingTop="@dimen/dimen_20" android:paddingBottom="@dimen/dimen_20" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                        <TextView android:textSize="@dimen/text_title" android:textColor="@color/white" android:id="@+id/tv_cash_last" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <TextView android:textSize="@dimen/text_content" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_3" android:text="@string/game_spread_cash_last"/>
                    </LinearLayout>
                    <View android:layout_gravity="center_vertical" android:background="@color/white" android:layout_width="@dimen/dimen_2" android:layout_height="12dp"/>
                    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                        <TextView android:textSize="@dimen/text_title" android:textColor="@color/white" android:id="@+id/tv_cash_total" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <TextView android:textSize="@dimen/text_content" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_3" android:text="@string/game_spread_cash_total"/>
                    </LinearLayout>
                    <View android:layout_gravity="center_vertical" android:background="@color/white" android:layout_width="@dimen/dimen_2" android:layout_height="12dp"/>
                    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                        <TextView android:textSize="@dimen/text_title" android:textColor="@color/white" android:id="@+id/tv_cash_available" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <TextView android:textSize="@dimen/text_content" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_3" android:text="@string/game_spread_cash_available"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView android:id="@+id/iv_help" android:padding="@dimen/dimen_5" android:layout_width="@dimen/dimen_30" android:layout_height="@dimen/dimen_30" android:src="@drawable/icon_description_white" android:scaleType="centerCrop" android:layout_alignParentRight="true"/>
                <TextView android:textSize="@dimen/text_subtitle" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_withdraw" android:background="@drawable/game_spread_withdraw_btn_bg" android:layout_width="match_parent" android:layout_height="@dimen/common_button_height" android:layout_marginLeft="@dimen/dimen_20" android:layout_marginRight="@dimen/dimen_20" android:text="@string/game_spread_withdraw_btn" android:layout_below="@+id/ll_fenhong"/>
                <TextView android:textSize="@dimen/text_sma" android:textColor="#ff8fad" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5" android:layout_marginBottom="@dimen/dimen_5" android:text="@string/game_spread_jiesuan" android:layout_below="@+id/tv_withdraw" android:layout_centerInParent="true"/>
            </RelativeLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="@dimen/common_button_height" android:layout_marginLeft="@dimen/dimen_16" android:layout_marginTop="@dimen/dimen_12" android:layout_marginRight="@dimen/dimen_16">
                <RelativeLayout android:id="@+id/rl_online" android:background="@drawable/game_spread_online_btn_bg" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                    <TextView android:textSize="@dimen/text_content" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_online" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/game_spread_online" android:drawableLeft="@drawable/game_tab_online" android:drawablePadding="@dimen/dimen_3" android:layout_centerInParent="true"/>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/rl_wx" android:background="@drawable/game_spread_wx_btn_bg" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="@dimen/dimen_10" android:layout_marginRight="@dimen/dimen_10" android:layout_weight="1">
                    <TextView android:textSize="@dimen/text_content" android:textColor="@color/white" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/game_spread_wx" android:drawableLeft="@drawable/game_tab_wx" android:drawablePadding="@dimen/dimen_3" android:layout_centerInParent="true"/>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/rl_pt" android:background="@drawable/game_spread_pt_btn_bg" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                    <TextView android:textSize="@dimen/text_content" android:textColor="@color/white" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/game_spread_pt" android:drawableLeft="@drawable/game_tab_pt" android:drawablePadding="@dimen/dimen_3" android:layout_centerInParent="true"/>
                </RelativeLayout>
            </LinearLayout>
            <android.support.p005v7.widget.RecyclerView android:id="@+id/recyclerView" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_16" android:nestedScrollingEnabled="false"/>
        </LinearLayout>
    </android.support.p002v4.widget.NestedScrollView>
    <com.one.tomato.widget.MarqueeTextView android:textSize="@dimen/text_sma" android:textColor="@color/white" android:ellipsize="marquee" android:gravity="center_vertical" android:id="@+id/tv_msg" android:background="@color/black_50" android:paddingLeft="@dimen/dimen_15" android:paddingRight="@dimen/dimen_15" android:visibility="gone" android:layout_width="match_parent" android:layout_height="30dp" android:singleLine="true" android:layout_alignParentBottom="true" android:marqueeRepeatLimit="marquee_forever"/>
    <RelativeLayout android:id="@+id/rl_share" android:background="@color/black_50" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/ll_qr_code" android:background="@drawable/game_tab_share_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20" android:layout_marginRight="@dimen/dimen_20" android:layout_centerInParent="true">
            <TextView android:textSize="32sp" android:textColor="@color/white" android:id="@+id/tv_game_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_40"/>
            <TextView android:textColor="@color/white" android:id="@+id/tv_game_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5"/>
            <ImageView android:id="@+id/iv_qr_code" android:layout_width="140dp" android:layout_height="140dp" android:layout_marginTop="@dimen/dimen_15" android:scaleType="centerInside"/>
            <TextView android:textSize="@dimen/text_sma" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10" android:text="@string/game_spread_invite"/>
            <ImageView android:id="@+id/iv_copy_link" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_15" android:src="@drawable/game_tab_copy_link" android:scaleType="centerInside"/>
        </LinearLayout>
        <ImageView android:id="@+id/iv_cancel" android:padding="@dimen/dimen_12" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_notice_delete" android:layout_below="@+id/ll_qr_code" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
