<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:background="@drawable/fq_ic_dialog_bg_super" android:paddingLeft="16dp" android:paddingTop="10dp" android:paddingRight="16dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="170dp" android:layout_marginTop="34dp">
        <ImageView android:id="@+id/iv_close" android:visibility="invisible" android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/fq_ic_title_close" android:layout_alignParentRight="true"/>
        <RelativeLayout android:id="@+id/rl_user_nickname_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="60dp" android:layout_centerHorizontal="true">
            <com.tomatolive.library.p136ui.view.custom.UserNickNameGradeView android:id="@+id/user_nickname" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
            <ImageView android:id="@+id/iv_idCard" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_4" android:src="@drawable/fq_ic_live_msg_super_big_2" android:layout_toRightOf="@+id/user_nickname" android:layout_centerVertical="true"/>
            <ImageView android:id="@+id/iv_guard_type" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_4" android:layout_toRightOf="@+id/iv_idCard" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView android:textSize="12sp" android:textColor="@color/fq_text_white_color" android:id="@+id/tv_id" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_below="@+id/rl_user_nickname_bg" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="12sp" android:textColor="@color/fq_text_white_color" android:gravity="center" android:id="@+id/tv_tips" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/fq_avatar_dialog_sign_tips" android:layout_below="@+id/tv_id" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <FrameLayout android:id="@+id/fl_avatar_bg" android:layout_width="90dp" android:layout_height="90dp" android:layout_centerHorizontal="true">
        <ImageView android:layout_gravity="center" android:id="@+id/iv_avatar" android:layout_width="68dp" android:layout_height="68dp" android:src="@drawable/fq_ic_placeholder_avatar"/>
        <ImageView android:id="@+id/iv_avatar_bg" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </FrameLayout>
</RelativeLayout>
