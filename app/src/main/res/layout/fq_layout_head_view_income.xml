<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/fq_colorWhite" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="120dp">
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <TextView android:textSize="28sp" android:textColor="@color/fq_colorMoneyPrimary" android:id="@+id/tv_gold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:text="0"/>
            <TextView android:textSize="14sp" android:textColor="@color/fq_colorTextTitlePrimary_2" android:id="@+id/tv_unit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/fq_tomato_money_str"/>
        </LinearLayout>
    </RelativeLayout>
    <include layout="@layout/fq_include_divider_view"/>
    <FrameLayout android:background="@color/fq_colorWhite" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="14sp" android:textColor="@color/fq_text_black" android:id="@+id/tv_calendar" android:paddingLeft="16dp" android:paddingTop="12dp" android:paddingRight="16dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:drawableRight="@drawable/fq_ic_calendar"/>
        <RelativeLayout android:id="@+id/rl_props_bg" android:paddingLeft="12dp" android:paddingTop="12dp" android:paddingRight="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="14sp" android:textColor="@color/fq_text_black" android:id="@+id/tv_calendar_props" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableRight="@drawable/fq_ic_arrow_right_gray" android:drawablePadding="8dp" android:layout_centerVertical="true"/>
            <TextView android:textSize="12sp" android:textColor="@color/fq_text_black_white_color_selector" android:gravity="center" android:id="@+id/tv_free" android:background="@drawable/fq_label_green_selector" android:paddingLeft="9dp" android:paddingRight="9dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:minHeight="21dp" android:text="@string/fq_props_free" android:layout_toLeftOf="@+id/tv_settle" android:layout_centerVertical="true"/>
            <TextView android:textSize="12sp" android:textColor="@color/fq_text_black_white_color_selector" android:gravity="center" android:id="@+id/tv_settle" android:background="@drawable/fq_label_green_selector" android:paddingLeft="9dp" android:paddingRight="9dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minHeight="21dp" android:text="@string/fq_props_settle" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
    </FrameLayout>
    <include layout="@layout/fq_include_divider_view"/>
</LinearLayout>
