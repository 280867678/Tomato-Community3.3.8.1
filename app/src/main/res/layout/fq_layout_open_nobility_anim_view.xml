<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/rl_nobility_avatar_bg" android:layout_width="202dp" android:layout_height="67dp" android:layout_centerVertical="true">
        <ImageView android:id="@+id/iv_avatar" android:layout_width="36dp" android:layout_height="36dp" android:layout_marginLeft="12dp" android:layout_marginRight="8dp" android:src="@drawable/fq_ic_placeholder_avatar_white"/>
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/iv_avatar">
            <TextView android:textSize="13sp" android:textColor="@color/fq_text_white_color" android:ellipsize="marquee" android:id="@+id/tv_name" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="60dp" android:singleLine="true" android:includeFontPadding="false" android:maxLength="10" android:marqueeRepeatLimit="marquee_forever"/>
            <TextView android:textSize="12sp" android:textColor="@color/fq_text_white_color" android:id="@+id/tv_tips" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
    <ImageView android:id="@+id/iv_badge" android:layout_width="90dp" android:layout_height="90dp" android:layout_marginLeft="-50dp" android:layout_toRightOf="@+id/rl_nobility_avatar_bg"/>
</RelativeLayout>
