<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="140dp">
        <TextView android:id="@+id/tv_place" android:background="@drawable/shape_upgrade_dialog_top_bg" android:layout_width="match_parent" android:layout_height="110dp" android:layout_alignParentBottom="true"/>
        <ImageView android:id="@+id/iv_place" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/upgrade_bg" android:scaleType="centerCrop"/>
        <TextView android:textSize="@dimen/text_subtitle" android:textStyle="bold" android:textColor="@color/white" android:id="@+id/tv_upgrade_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20" android:layout_marginTop="@dimen/dimen_60" android:text="@string/update_find_new_version"/>
        <TextView android:textSize="@dimen/text_sma" android:textColor="@color/colorAccent" android:gravity="center" android:id="@+id/tv_version" android:background="@drawable/common_shape_solid_corner30_white" android:layout_width="@dimen/dimen_50" android:layout_height="@dimen/dimen_18" android:layout_marginLeft="@dimen/dimen_2" android:layout_marginTop="61dp" android:layout_toRightOf="@+id/tv_upgrade_tip"/>
        <TextView android:textSize="@dimen/text_content" android:textColor="@color/white" android:id="@+id/tv_size" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_below="@+id/tv_upgrade_tip" android:layout_alignLeft="@+id/tv_upgrade_tip"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:background="@drawable/shape_upgrade_dialog_bottom_bg" android:padding="@dimen/dimen_24" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_update_desc" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:scrollbarStyle="insideInset" android:textSize="14sp" android:textColor="@color/text_middle" android:id="@+id/tv_description" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxHeight="180dp"/>
            <TextView android:scrollbarStyle="insideInset" android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_update" android:background="@drawable/shape_upgrade_dialog_btn_bg" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="@dimen/dimen_40" android:layout_marginTop="@dimen/dimen_20" android:text="@string/update_now"/>
        </LinearLayout>
        <RelativeLayout android:id="@+id/rl_update_ing" android:background="@drawable/shape_upgrade_dialog_btn_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textColor="@color/white" android:id="@+id/downloading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20" android:layout_marginTop="5dp" android:text="@string/uptate_ing" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
            <TextView android:textColor="@color/white" android:id="@+id/tv_progress" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginRight="@dimen/dimen_20" android:text="0%" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
            <ProgressBar android:id="@+id/progressBar" android:background="@drawable/common_shape_solid_corner30_white" android:layout_width="match_parent" android:layout_height="5dp" android:layout_marginTop="10dp" android:layout_marginBottom="@dimen/dimen_10" android:max="100" android:progressDrawable="@drawable/layer_progress_update" android:layout_below="@+id/downloading" android:layout_alignLeft="@+id/downloading" android:layout_alignRight="@+id/tv_progress" style="?android:attr/progressBarStyleHorizontal"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl_replace_app" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10" android:layout_marginBottom="@dimen/dimen_10">
            <TextView android:textSize="@dimen/text_content" android:textColor="@color/text_middle" android:id="@+id/tv_replace_tip" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/update_replace_app" android:layout_alignParentTop="true"/>
            <ImageView android:id="@+id/iv_arrow" android:layout_width="@dimen/dimen_50" android:layout_height="@dimen/dimen_50" android:layout_marginTop="@dimen/dimen_10" android:src="@drawable/upgrade_arrow" android:scaleType="centerInside" android:layout_below="@+id/tv_replace_tip" android:layout_centerInParent="true"/>
            <ImageView android:id="@+id/iv_arrow_left" android:layout_width="@dimen/dimen_50" android:layout_height="@dimen/dimen_50" android:layout_marginTop="@dimen/dimen_10" android:src="@drawable/upgrade_arrow_left_app" android:scaleType="centerInside" android:layout_toLeftOf="@+id/iv_arrow" android:layout_below="@+id/tv_replace_tip" android:layout_centerInParent="true"/>
            <ImageView android:id="@+id/iv_arrow_right" android:layout_width="@dimen/dimen_50" android:layout_height="@dimen/dimen_50" android:layout_marginTop="@dimen/dimen_10" android:src="@drawable/upgrade_arrow_right_app" android:scaleType="centerInside" android:layout_toRightOf="@+id/iv_arrow" android:layout_below="@+id/tv_replace_tip" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl_upgrade_fail" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10" android:layout_marginBottom="@dimen/dimen_10">
            <TextView android:textSize="@dimen/text_content" android:textColor="@color/text_middle" android:gravity="center" android:id="@+id/tv_fail_tip" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/update_download_error" android:layout_alignParentTop="true"/>
            <TextView android:textSize="@dimen/text_content" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_re_download" android:background="@drawable/shape_upgrade_dialog_btn_bg" android:layout_width="110dp" android:layout_height="36dp" android:layout_marginTop="@dimen/dimen_15" android:text="@string/update_download_retry" android:layout_below="@+id/tv_fail_tip" android:layout_alignParentLeft="true"/>
            <TextView android:textSize="@dimen/text_content" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_website_download" android:background="@drawable/shape_upgrade_dialog_btn_bg" android:layout_width="110dp" android:layout_height="36dp" android:layout_marginTop="@dimen/dimen_15" android:text="@string/update_download_website" android:layout_below="@+id/tv_fail_tip" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/text_sma" android:textColor="@color/colorAccent" android:textColorLink="@color/color_FC4C7B" android:autoLink="all" android:id="@+id/tv_install_tip" android:padding="@dimen/dimen_8" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/update_install_app_tip"/>
            <TextView android:textSize="@dimen/text_sma" android:textColor="@color/text_middle" android:id="@+id/tv_website_tip" android:padding="@dimen/dimen_8" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/update_website_tip"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:layout_gravity="center_horizontal" android:id="@+id/iv_delete" android:padding="@dimen/dimen_15" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_notice_delete" android:scaleType="centerInside"/>
</LinearLayout>
