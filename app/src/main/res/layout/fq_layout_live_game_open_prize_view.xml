<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/rl_game_prize_bg" android:background="@drawable/fq_shape_game_prize_content_bg" android:layout_width="120dp" android:layout_height="wrap_content" android:layout_marginTop="7dp">
        <TextView android:textSize="10sp" android:textColor="@color/fq_colorWhite" android:id="@+id/tv_game_title" android:background="@drawable/fq_shape_game_prize_title_bg" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="5dp" android:paddingEnd="16dp"/>
        <TextView android:textSize="10sp" android:textColor="@color/fq_colorBlack" android:id="@+id/tv_game_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginBottom="6dp" android:layout_below="@+id/tv_game_title" android:layout_marginStart="5dp" android:layout_marginEnd="5dp"/>
    </RelativeLayout>
    <ImageView android:id="@+id/iv_game_close" android:layout_width="13dp" android:layout_height="13dp" android:layout_marginLeft="-7dp" android:src="@drawable/fq_ic_close" android:layout_toRightOf="@+id/rl_game_prize_bg"/>
</RelativeLayout>
