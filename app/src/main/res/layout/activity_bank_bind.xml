<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/merge_title_bar"/>
    <TextView android:textSize="@dimen/text_subtitle" android:textColor="@color/text_999ead" android:gravity="center_vertical" android:background="@color/color_f5f5f7" android:paddingLeft="@dimen/margin_14" android:layout_width="match_parent" android:layout_height="@dimen/common_item_height" android:text="@string/bank_bind_top_msg"/>
    <RelativeLayout android:id="@+id/rl_bank_select" android:background="@color/white" android:paddingLeft="@dimen/margin_14" android:paddingRight="@dimen/margin_14" android:layout_width="match_parent" android:layout_height="@dimen/common_item_height">
        <TextView android:id="@+id/tv_select_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/bank_select_title" android:layout_alignParentLeft="true" android:layout_centerInParent="true" style="@style/Text_color_light_size_subtitle"/>
        <ImageView android:id="@+id/iv_select_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_arrow_right_grey" android:layout_alignParentRight="true" android:layout_centerInParent="true"/>
        <TextView android:textColorHint="@color/disable" android:id="@+id/tv_bank_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_30" android:hint="@string/bank_select_hint" android:layout_toLeftOf="@+id/iv_select_arrow" android:layout_toRightOf="@+id/tv_select_title" android:layout_centerInParent="true" style="@style/Text_color_dark_size_subtitle"/>
        <View android:background="@color/divider" android:layout_width="match_parent" android:layout_height="@dimen/common_divider" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout android:background="@color/white" android:paddingLeft="@dimen/margin_14" android:paddingRight="@dimen/margin_14" android:layout_width="match_parent" android:layout_height="@dimen/common_item_height">
        <TextView android:id="@+id/tv_bank_account_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/bank_account_title" android:layout_alignParentLeft="true" android:layout_centerInParent="true" style="@style/Text_color_light_size_subtitle"/>
        <com.one.tomato.widget.ClearEditText android:textColorHint="@color/disable" android:id="@+id/et_bank_account" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_30" android:hint="@string/bank_account_hint" android:layout_toRightOf="@+id/tv_bank_account_title" android:layout_centerInParent="true" android:inputType="number" style="@style/Text_color_dark_size_subtitle"/>
        <View android:background="@color/divider" android:layout_width="match_parent" android:layout_height="@dimen/common_divider" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout android:background="@color/white" android:paddingLeft="@dimen/margin_14" android:paddingRight="@dimen/margin_14" android:layout_width="match_parent" android:layout_height="@dimen/common_item_height">
        <TextView android:id="@+id/tv_bank_name_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/bank_name_title" android:layout_alignParentLeft="true" android:layout_centerInParent="true" style="@style/Text_color_light_size_subtitle"/>
        <com.one.tomato.widget.ClearEditText android:textColorHint="@color/disable" android:id="@+id/et_bank_name" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_30" android:hint="@string/bank_name_hint" android:layout_toRightOf="@+id/tv_bank_name_title" android:layout_centerInParent="true" style="@style/Text_color_dark_size_subtitle"/>
        <View android:background="@color/divider" android:layout_width="match_parent" android:layout_height="@dimen/common_divider" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <TextView android:enabled="false" android:textSize="@dimen/text_subtitle" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/tv_confirm" android:background="@drawable/common_selector_solid_corner30_coloraccent" android:layout_width="match_parent" android:layout_height="@dimen/dimen_50" android:layout_marginLeft="@dimen/margin_14" android:layout_marginTop="@dimen/dimen_30" android:layout_marginRight="@dimen/margin_14" android:text="@string/alipay_bind_btn"/>
</LinearLayout>
