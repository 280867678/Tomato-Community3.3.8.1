            <TextView android:textSize="10sp" android:textColor="#bb95d1" android:gravity="center" android:id="@+id/tv_winning_pws_tips" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="13dp" android:layout_marginTop="10dp" android:layout_marginRight="13dp" android:text="@string/fq_hd_winning_pws_tips"/>
