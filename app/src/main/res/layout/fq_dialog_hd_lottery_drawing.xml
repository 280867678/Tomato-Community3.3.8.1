        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/ll_draw_open_bg" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="40dp">
