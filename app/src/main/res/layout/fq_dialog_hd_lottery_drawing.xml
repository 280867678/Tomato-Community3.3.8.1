            </RelativeLayout>
            <LinearLayout android:orientation="vertical" android:background="@drawable/fq_hd_shape_winning_names_bg" android:padding="4dp" android:layout_width="match_parent" android:layout_height="253dp" android:layout_marginLeft="13dp" android:layout_marginRight="13dp">
