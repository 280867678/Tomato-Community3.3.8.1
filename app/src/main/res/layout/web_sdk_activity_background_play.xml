<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <Button android:id="@+id/btn_open" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="开启服务" android:onClick="open"/>
    <Button android:id="@+id/btn_close" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="关闭服务" android:onClick="close" app:layout_constraintTop_toBottomOf="@+id/btn_open"/>
    <Button android:id="@+id/btn_play" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="播放" android:onClick="play" app:layout_constraintTop_toBottomOf="@+id/btn_close"/>
    <Button android:id="@+id/btn_pause" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="暂停" android:onClick="pause" app:layout_constraintLeft_toRightOf="@+id/btn_play" app:layout_constraintTop_toBottomOf="@+id/btn_close"/>
    <Button android:id="@+id/btn_stop" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="停止" android:onClick="stop" app:layout_constraintLeft_toRightOf="@+id/btn_pause" app:layout_constraintTop_toBottomOf="@+id/btn_close"/>
    <Button android:id="@+id/btn_volume_low" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="音量减" android:onClick="volume_low" app:layout_constraintTop_toBottomOf="@+id/btn_stop"/>
    <Button android:id="@+id/btn_volume_high" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="音量加" android:onClick="volume_high" app:layout_constraintLeft_toRightOf="@+id/btn_volume_low" app:layout_constraintTop_toBottomOf="@+id/btn_stop"/>
</android.support.constraint.ConstraintLayout>
