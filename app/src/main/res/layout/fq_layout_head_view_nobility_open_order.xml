<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="@color/fq_colorWhite" android:paddingLeft="15dp" android:paddingTop="10dp" android:paddingRight="15dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="15dp">
            <TextView android:textSize="14sp" android:textColor="#ff999999" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/fq_nobility_open" android:layout_weight="1"/>
            <TextView android:textSize="12sp" android:textColor="#ffff5f52" android:id="@+id/tv_anchor" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/iv_avatar" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginRight="10dp" android:src="@drawable/fq_ic_placeholder_avatar"/>
            <ImageView android:id="@+id/iv_badge" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginRight="10dp"/>
            <TextView android:textSize="13sp" android:textColor="@color/fq_text_black" android:id="@+id/tv_nick_name" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <View android:background="@color/fq_colorBgPrimary_2" android:layout_width="match_parent" android:layout_height="10dp"/>
    <LinearLayout android:orientation="horizontal" android:background="@color/fq_colorWhite" android:paddingLeft="15dp" android:paddingTop="12dp" android:paddingRight="15dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="14sp" android:textColor="@color/fq_text_black" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/fq_nobility_over_pay" android:layout_weight="1"/>
        <TextView android:textSize="13sp" android:textColor="#ff999999" android:id="@+id/tv_over_pay" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <View android:background="@color/fq_colorBgPrimary_2" android:layout_width="match_parent" android:layout_height="10dp"/>
    <LinearLayout android:orientation="horizontal" android:background="@color/fq_colorWhite" android:paddingLeft="15dp" android:paddingTop="12dp" android:paddingRight="15dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="14sp" android:textColor="@color/fq_text_black" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/fq_nobility_open_selected_item" android:layout_weight="1"/>
        <TextView android:textSize="14sp" android:textColor="#ff999999" android:id="@+id/tv_valid_date" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
