    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/rl_title_bg">
        <android.support.p002v4.widget.NestedScrollView android:id="@+id/rl_achieve_detail_bg" android:visibility="invisible" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:overScrollMode="never">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                <ImageView android:id="@+id/iv_detail_achieve" android:layout_width="156dp" android:layout_height="156dp" android:layout_marginTop="60dp" android:layout_centerHorizontal="true"/>
                <TextView android:textSize="20sp" android:textColor="#fee4ba" android:id="@+id/tv_achieve_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:drawablePadding="25dp" android:layout_below="@+id/iv_detail_achieve" android:layout_centerHorizontal="true" android:drawableStart="@drawable/fq_ic_achieve_detail_left_line" android:drawableEnd="@drawable/fq_ic_achieve_detail_right_line"/>
