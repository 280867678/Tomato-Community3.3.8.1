        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        <TextView android:textSize="14sp" android:textColor="@color/fq_text_white_color" android:gravity="center" android:id="@+id/tv_loading_fail" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/fq_data_loading_fail_retry"/>
        <TextView android:textSize="14sp" android:textColor="@color/fq_text_white_color" android:gravity="center" android:id="@+id/tv_loading" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/hint_text_dialog_loading_data"/>
    </FrameLayout>
</RelativeLayout>
