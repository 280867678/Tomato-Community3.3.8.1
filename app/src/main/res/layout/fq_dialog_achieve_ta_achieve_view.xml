<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@drawable/fq_achieve_shape_bg_dialog_ta" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/iv_star_bg" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/fq_ic_achieve_star_bg" android:scaleType="fitStart"/>
    <RelativeLayout android:id="@+id/rl_title_bg" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="10dp" android:paddingEnd="10dp">
        <ImageView android:id="@+id/iv_close" android:padding="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/fq_ic_achieve_close_white" android:layout_centerVertical="true"/>
        <TextView android:textSize="16sp" android:textColor="@color/fq_text_white_color" android:id="@+id/tv_dialog_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/fq_achieve_he_achieve" android:layout_centerInParent="true"/>
