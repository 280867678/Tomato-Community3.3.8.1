<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/fq_shape_dialog_white_corner_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="#ff292929" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="16dp" android:layout_centerHorizontal="true"/>
    <ImageView android:id="@+id/iv_close" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:src="@drawable/fq_ic_achieve_close_black" android:layout_alignParentRight="true"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/tv_title">
        <com.tomatolive.library.p136ui.view.widget.Html5WebView android:id="@+id/tv_content" android:fadingEdge="none" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_marginBottom="5dp" android:layout_weight="1" android:overScrollMode="never"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_know_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <View android:background="@color/fq_view_divider_color" android:layout_width="match_parent" android:layout_height="@dimen/fq_divider_height"/>
            <TextView android:textSize="16dp" android:textColor="#ff5f52" android:gravity="center" android:id="@+id/tv_know" android:layout_width="match_parent" android:layout_height="45dp" android:text="@string/fq_know"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
