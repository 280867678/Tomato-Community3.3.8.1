<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="50dp">
    <LinearLayout android:orientation="vertical" android:id="@+id/mine_linear" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:gravity="center_vertical" android:id="@+id/mine_relative" android:background="@color/white" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <ImageView android:id="@+id/mine_left_image" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_14" android:scaleType="centerInside" android:layout_centerVertical="true"/>
            <TextView android:textSize="@dimen/text_item_title" android:textColor="@color/text_dark" android:ellipsize="end" android:id="@+id/mine_left_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_14" android:lines="1" android:layout_toRightOf="@+id/mine_left_image" android:layout_centerVertical="true"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_15" android:layout_alignParentRight="true" android:layout_centerVertical="true">
                <TextView android:textSize="@dimen/text_content" android:textColor="@color/text_969696" android:ellipsize="end" android:gravity="center" android:id="@+id/mine_right_sub_name" android:visibility="gone" android:layout_width="@dimen/dimen_130" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_10" android:lines="1" android:singleLine="true"/>
                <ImageView android:id="@+id/mine_right_sub_img" android:visibility="gone" android:layout_width="32dp" android:layout_height="@dimen/dimen_32" android:layout_marginRight="@dimen/dimen_10" android:scaleType="centerCrop"/>
                <View android:id="@+id/rad_point" android:background="@drawable/common_shape_red_crile" android:visibility="gone" android:layout_width="@dimen/dp_10" android:layout_height="@dimen/dp_10" android:layout_marginRight="@dimen/dimen_10"/>
                <ImageView android:id="@+id/mine_right_iv" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_arrow_right_grey" android:scaleType="centerInside"/>
            </LinearLayout>
            <TextView android:textSize="@dimen/text_content" android:textColor="@color/text_middle" android:id="@+id/mine_right_name" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_15" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View android:id="@+id/mine_line_view" android:background="@color/divider" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/common_divider" android:layout_marginLeft="@dimen/margin_14" android:layout_marginRight="@dimen/dimen_15"/>
    </LinearLayout>
</FrameLayout>
