<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:padding="@dimen/dimen_5" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:background="@drawable/common_shape_solid_corner12_white" android:layout_width="match_parent" android:layout_height="80dp">
        <ImageView android:id="@+id/iv_icon" android:layout_width="36dp" android:layout_height="36dp" android:layout_marginLeft="@dimen/dimen_10" android:scaleType="centerInside" android:layout_centerVertical="true"/>
        <TextView android:textSize="@dimen/text_content" android:textColor="@color/text_dark" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10" android:layout_marginTop="@dimen/dimen_20" android:layout_toRightOf="@+id/iv_icon"/>
        <TextView android:textSize="@dimen/text_sma" android:textColor="@color/text_middle" android:id="@+id/tv_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5" android:layout_marginBottom="@dimen/dimen_20" android:layout_below="@+id/tv_title" android:layout_alignLeft="@+id/tv_title"/>
    </RelativeLayout>
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/ll_lock" android:background="@drawable/common_shape_solid_corner12_white" android:layout_width="match_parent" android:layout_height="80dp" android:alpha="0.9">
        <ImageView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10" android:src="@drawable/icon_level_lock"/>
        <TextView android:textSize="@dimen/text_content" android:textColor="@color/text_dark" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5" android:text="@string/level_lock"/>
    </LinearLayout>
</RelativeLayout>
