<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/app_bg_grey" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_content_data" android:background="@color/colorPrimary" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/iv_head" android:layout_width="34dp" android:layout_height="34dp" android:layout_marginLeft="@dimen/margin_14" android:layout_marginTop="16dp" android:src="@drawable/default_img_head" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_5" android:layout_marginTop="12dp" android:layout_marginRight="@dimen/dimen_5" android:layout_toLeftOf="@+id/ll_thumb" android:layout_toRightOf="@+id/iv_head" android:layout_alignParentTop="true">
                <TextView android:textSize="@dimen/text_subtitle" android:textColor="@color/text_middle" android:ellipsize="end" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="150dp" android:lines="1"/>
                <TextView android:textSize="@dimen/text_sma" android:textColor="@color/colorPrimary" android:id="@+id/tv_landlord" android:paddingLeft="@dimen/dimen_7" android:paddingTop="@dimen/dimen_2" android:paddingRight="@dimen/dimen_7" android:paddingBottom="@dimen/dimen_2" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_5" android:text="@string/post_comment_landlord"/>
                <ImageView android:id="@+id/iv_comment_level_nick" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="@dimen/dimen_2" android:src="@drawable/level_nick1_s" android:scaleType="centerInside"/>
                <ImageView android:id="@+id/iv_comment_vip" android:visibility="gone" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="@dimen/dimen_2" android:src="@drawable/my_vip" android:scaleType="centerInside"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/ll_thumb" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_16" android:layout_toLeftOf="@+id/iv_comment_more">
                <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_thumb" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/selector_post_thumb"/>
                <TextView android:textSize="@dimen/text_content" android:textColor="@color/text_646464" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/tv_thumb_num" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_5" android:layout_marginRight="@dimen/dimen_5" android:text="0" android:lines="1"/>
                <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_un_thumb" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/selector_post_un_thumb"/>
            </LinearLayout>
            <ImageView android:id="@+id/iv_comment_more" android:paddingLeft="@dimen/dimen_10" android:paddingRight="@dimen/dimen_16" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_16" android:src="@drawable/post_comment_more" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
            <RelativeLayout android:id="@+id/rl_time" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_below="@+id/ll_name" android:layout_alignLeft="@+id/ll_name">
                <TextView android:textSize="@dimen/text_sma" android:textColor="@color/text_light" android:id="@+id/tv_time" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true"/>
                <TextView android:textSize="@dimen/text_sma" android:textColor="@color/text_light" android:id="@+id/tv_send_ing" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/post_comment_send_ing" android:layout_alignParentLeft="true"/>
                <TextView android:textSize="@dimen/text_sma" android:textColor="@color/text_light" android:id="@+id/tv_send_fail" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/post_comment_send_fail" android:drawableLeft="@drawable/post_comment_fail" android:drawablePadding="@dimen/dimen_5" android:layout_alignParentLeft="true"/>
                <TextView android:textSize="@dimen/text_sma" android:textColor="@color/text_light" android:id="@+id/tv_send_retry" android:paddingLeft="@dimen/dimen_5" android:paddingRight="@dimen/dimen_5" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_30" android:text="@string/post_publish_retry" android:layout_toRightOf="@+id/tv_send_fail"/>
                <TextView android:textSize="@dimen/text_sma" android:textColor="@color/text_light" android:id="@+id/tv_send_delete" android:paddingLeft="@dimen/dimen_5" android:paddingRight="@dimen/dimen_5" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15" android:text="@string/common_delete" android:layout_toRightOf="@+id/tv_send_retry"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/rl_comment" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginRight="15dp" android:layout_below="@+id/rl_time" android:layout_alignLeft="@+id/ll_name">
                <LinearLayout android:orientation="vertical" android:id="@+id/ll_content" android:paddingBottom="@dimen/dimen_15" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="@dimen/text_subtitle" android:textColor="@color/text_dark" android:id="@+id/tv_content" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                    <com.one.tomato.widget.NoScrollGridView android:id="@+id/gridView" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8" android:horizontalSpacing="@dimen/dimen_10" android:verticalSpacing="@dimen/dimen_10" android:numColumns="3"/>
                    <TextView android:textSize="@dimen/text_subtitle" android:textColor="@color/text_light" android:id="@+id/text_reply_other" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_12"/>
                    <TextView android:textSize="@dimen/text_sma" android:textColor="@color/text_dark" android:gravity="center" android:id="@+id/tv_reply_more" android:background="@drawable/common_shape_solid_corner12_f5f5f7" android:paddingLeft="@dimen/dimen_8" android:paddingRight="@dimen/dimen_8" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="@dimen/dimen_20" android:layout_marginTop="@dimen/dimen_12"/>
                </LinearLayout>
                <TextView android:textSize="18sp" android:textColor="@color/disable" android:id="@+id/tv_deleted_tip" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/post_comment_delete" android:drawableRight="@drawable/post_deleted_tip" android:drawablePadding="7dp"/>
            </RelativeLayout>
            <View android:id="@+id/view_divider" android:background="@color/divider" android:layout_width="match_parent" android:layout_height="@dimen/common_divider" android:layout_marginTop="5dp" android:layout_below="@+id/rl_comment"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/ll_comment_loading" android:background="@color/colorPrimary" android:padding="@dimen/dimen_15" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.airbnb.lottie.LottieAnimationView android:id="@+id/loading_progress" android:layout_width="@dimen/dimen_24" android:layout_height="@dimen/dimen_24" android:scaleType="centerCrop" app:lottie_autoPlay="true" app:lottie_loop="true"/>
        <TextView android:textColor="@color/text_light" android:id="@+id/tv_buffer_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_7" android:text="@string/post_comment_loading"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/ll_comment_nodata" android:background="@color/colorPrimary" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_40" android:src="@drawable/post_comment_nodata"/>
        <TextView android:textSize="@dimen/text_content" android:textColor="@color/text_middle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_40" android:text="@string/post_comment_no_data"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/ll_comment_fail" android:background="@color/colorPrimary" android:padding="@dimen/dimen_15" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textColor="@color/text_light" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/post_comment_load_fail"/>
    </LinearLayout>
</LinearLayout>
