<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/fq_shape_recommend_bg" android:paddingTop="15dp" android:paddingBottom="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/fl_avatar_bg" android:layout_width="60dp" android:layout_height="60dp" android:layout_centerHorizontal="true">
        <ImageView android:id="@+id/iv_avatar" android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/fq_ic_placeholder_avatar"/>
        <ImageView android:id="@+id/iv_live" android:visibility="invisible" android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/fq_ic_living_icon_circle" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <TextView android:textSize="11sp" android:textColor="@color/fq_colorBlack" android:gravity="center_vertical" android:id="@+id/tv_nick_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_below="@+id/fl_avatar_bg" android:layout_centerHorizontal="true"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_grade_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_below="@+id/tv_nick_name" android:layout_centerHorizontal="true">
        <ImageView android:id="@+id/iv_gender_sex" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="3dp"/>
        <com.tomatolive.library.p136ui.view.custom.AnchorGradeView android:id="@+id/anchor_grade_view" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView android:textSize="11sp" android:textColor="@color/fq_text_gray" android:id="@+id/tv_attention" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_below="@+id/ll_grade_bg" android:layout_centerHorizontal="true"/>
</RelativeLayout>
