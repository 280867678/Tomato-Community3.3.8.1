<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/colorPrimary" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="100dp">
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:id="@+id/rl_my_publish_text" android:background="@color/white" android:padding="@dimen/dimen_10" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="18sp" android:textColor="@color/text_dark" android:ellipsize="end" android:id="@+id/tv_post_text_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:lines="2"/>
            <TextView android:textSize="@dimen/text_content" android:textColor="@color/text_middle" android:id="@+id/tv_post_text_date" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/ll_my_publish_img" android:background="@color/white" android:padding="@dimen/dimen_10" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <TextView android:textSize="18sp" android:textColor="@color/text_dark" android:ellipsize="end" android:id="@+id/tv_post_img_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:lines="2"/>
                <TextView android:textSize="@dimen/text_content" android:textColor="@color/text_middle" android:id="@+id/tv_post_img_date" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10"/>
            </LinearLayout>
            <RelativeLayout android:layout_width="80dp" android:layout_height="80dp" android:layout_marginLeft="@dimen/dimen_20">
                <ImageView android:id="@+id/iv_post_image" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
                <TextView android:textSize="10sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_post_image_num" android:background="@drawable/shape_post_image_num" android:paddingLeft="@dimen/dimen_10" android:paddingTop="@dimen/dimen_3" android:paddingRight="@dimen/dimen_10" android:paddingBottom="@dimen/dimen_3" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_7" android:layout_marginBottom="@dimen/dimen_7" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/ll_my_publish_video" android:background="@color/white" android:padding="@dimen/dimen_10" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <TextView android:textSize="18sp" android:textColor="@color/text_dark" android:ellipsize="end" android:id="@+id/tv_post_video_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:lines="2"/>
                <TextView android:textSize="@dimen/text_content" android:textColor="@color/text_middle" android:id="@+id/tv_post_video_date" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10"/>
            </LinearLayout>
            <RelativeLayout android:layout_width="80dp" android:layout_height="80dp" android:layout_marginLeft="@dimen/dimen_20">
                <ImageView android:id="@+id/iv_post_video" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
                <ImageView android:id="@+id/imageView" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/post_video_play" android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <View android:background="@color/divider" android:layout_width="match_parent" android:layout_height="@dimen/common_divider"/>
</LinearLayout>
