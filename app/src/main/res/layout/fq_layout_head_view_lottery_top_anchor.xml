<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:paddingBottom="30dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:paddingLeft="50dp" android:paddingRight="50dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="17dp" android:src="@drawable/fq_ic_lottery_top_head_light" android:layout_centerHorizontal="true"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/fq_ic_lottery_top_head_star" android:layout_centerInParent="true"/>
        <RelativeLayout android:id="@+id/rl_avatar_bg" android:background="@drawable/fq_shape_lottery_avatar_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <ImageView android:id="@+id/iv_avatar" android:layout_width="67dp" android:layout_height="67dp" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
            <ImageView android:id="@+id/iv_label_live" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignRight="@+id/iv_avatar" android:layout_alignBottom="@+id/iv_avatar"/>
        </RelativeLayout>
        <TextView android:textSize="12sp" android:textColor="@color/fq_text_white_color" android:id="@+id/tv_anchor_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="90dp" android:layout_below="@+id/rl_avatar_bg" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="11sp" android:textColor="#ff886f9e" android:id="@+id/tv_contribution" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/tv_anchor_name" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="12sp" android:textColor="#ff8154a6" android:gravity="center" android:id="@+id/tv_first" android:background="@drawable/fq_shape_white_corner_bg" android:paddingLeft="9dp" android:paddingTop="2dp" android:paddingRight="9dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="第一名" android:layout_below="@+id/tv_contribution" android:layout_centerHorizontal="true"/>
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignBottom="@+id/tv_first" android:layout_alignParentRight="true">
            <RelativeLayout android:background="@drawable/fq_shape_lottery_avatar_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
                <ImageView android:id="@+id/iv_avatar_third" android:layout_width="56dp" android:layout_height="56dp" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
                <ImageView android:id="@+id/iv_label_live_third" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignRight="@+id/iv_avatar_third" android:layout_alignBottom="@+id/iv_avatar_third"/>
            </RelativeLayout>
            <TextView android:textSize="12sp" android:textColor="@color/fq_text_white_color" android:id="@+id/tv_anchor_name_third" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp"/>
            <TextView android:textSize="11sp" android:textColor="#ff886f9e" android:id="@+id/tv_contribution_third" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_above="@+id/tv_second"/>
            <TextView android:textSize="12sp" android:textColor="#ff8154a6" android:gravity="center" android:background="@drawable/fq_shape_white_corner_bg" android:paddingLeft="9dp" android:paddingTop="2dp" android:paddingRight="9dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="第三名"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignBottom="@+id/tv_first">
            <RelativeLayout android:background="@drawable/fq_shape_lottery_avatar_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
                <ImageView android:id="@+id/iv_avatar_second" android:layout_width="56dp" android:layout_height="56dp" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
                <ImageView android:id="@+id/iv_label_live_second" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignRight="@+id/iv_avatar_second" android:layout_alignBottom="@+id/iv_avatar_second"/>
            </RelativeLayout>
            <TextView android:textSize="12sp" android:textColor="@color/fq_text_white_color" android:id="@+id/tv_anchor_name_second" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp"/>
            <TextView android:textSize="11sp" android:textColor="#ff886f9e" android:id="@+id/tv_contribution_second" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_above="@+id/tv_second"/>
            <TextView android:textSize="12sp" android:textColor="#ff8154a6" android:gravity="center" android:id="@+id/tv_second" android:background="@drawable/fq_shape_white_corner_bg" android:paddingLeft="9dp" android:paddingTop="2dp" android:paddingRight="9dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="第二名"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
