<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/fq_shape_dialog_white_corner_bg" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/fq_text_black" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="16dp" android:text="@string/fq_tip" android:layout_centerHorizontal="true"/>
    <TextView android:textSize="15sp" android:textColor="@color/fq_text_gray" android:gravity="center" android:id="@+id/tv_tips" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:layout_marginBottom="16dp" android:layout_below="@+id/tv_title" android:lineSpacingExtra="4dp"/>
    <View android:id="@+id/v_divider" android:background="@color/fq_view_divider_color" android:layout_width="match_parent" android:layout_height="@dimen/fq_divider_height" android:layout_below="@+id/tv_tips"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/ll_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/v_divider">
        <TextView android:textSize="16sp" android:textColor="@color/fq_colorPrimary" android:gravity="center" android:id="@+id/tv_sure" android:layout_width="0dp" android:layout_height="wrap_content" android:minHeight="45dp" android:text="@string/fq_btn_sure" android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
