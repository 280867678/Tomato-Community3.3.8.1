<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:layout_gravity="center_horizontal" android:layout_width="@dimen/dimen_20" android:layout_height="@dimen/dimen_12" android:src="@drawable/show_up_pop" android:layout_centerHorizontal="true"/>
    <RelativeLayout android:id="@+id/relate_show_pop" android:background="@drawable/common_shape_solid_corner12_white" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="@dimen/dimen_40" android:layout_marginTop="@dimen/dimen_10" android:layout_centerHorizontal="true">
        <ImageView android:id="@+id/image" android:layout_width="@dimen/dimen_28" android:layout_height="@dimen/dimen_28" android:scaleType="centerInside" android:layout_centerVertical="true"/>
        <TextView android:textSize="@dimen/text_size_12" android:textStyle="bold" android:textColor="@color/text_dark" android:id="@+id/text_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_4" android:layout_toRightOf="@+id/image" android:layout_centerVertical="true"/>
        <TextView android:textSize="@dimen/text_size_10" android:textColor="@color/text_light" android:id="@+id/text_desc" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/text_name" android:layout_centerVertical="true" android:layout_marginStart="60dp"/>
        <ImageView android:id="@+id/image_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_arrow_right_black" android:layout_toRightOf="@+id/text_desc" android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
