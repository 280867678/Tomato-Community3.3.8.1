<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:id="@+id/view_player_dialog_half_left" android:background="#00000000" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/view_player_dialog_half_right" android:background="#7f000000" android:layout_width="120dp" android:layout_height="match_parent">
        <TextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/tv_player_dialog_title" android:padding="18dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="title"/>
        <View android:id="@+id/view_player_dialog_title_line" android:background="#555555" android:visibility="gone" android:layout_width="match_parent" android:layout_height="0.5dp"/>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_player_dialog_half_container" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
