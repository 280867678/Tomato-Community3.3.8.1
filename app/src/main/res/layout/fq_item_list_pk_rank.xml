<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/fq_colorWhite" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:id="@+id/fl_brand" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginRight="12dp" android:layout_centerVertical="true">
        <TextView android:textSize="16dp" android:textColor="@color/fq_text_black" android:layout_gravity="center" android:id="@+id/tv_num" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </FrameLayout>
    <RelativeLayout android:id="@+id/rl_avatar_grade_bg" android:paddingTop="10dp" android:paddingRight="12dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@+id/fl_brand">
        <ImageView android:id="@+id/iv_avatar" android:layout_width="44dp" android:layout_height="44dp" android:src="@drawable/fq_ic_placeholder_avatar" android:layout_centerVertical="true" android:layout_marginEnd="10dp"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_content_bg" android:paddingLeft="8dp" android:paddingTop="4dp" android:paddingRight="10dp" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="200dp" android:layout_toRightOf="@+id/iv_avatar" android:layout_centerVertical="true">
            <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_mystery_bg" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textSize="14dp" android:textColor="@color/fq_colorBlack" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:text="@string/fq_mystery_man"/>
                    <TextView android:textSize="10dp" android:textColor="@color/fq_text_white_color" android:gravity="center" android:background="@drawable/fq_shape_nobility_stealth_label" android:paddingLeft="3dp" android:paddingRight="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:text="@string/fq_mystery_man_invisible"/>
                    <TextView android:textSize="10dp" android:textColor="@color/fq_text_white_color" android:gravity="center" android:id="@+id/tv_me" android:background="@drawable/fq_shape_red_label_bg" android:paddingLeft="3dp" android:paddingRight="3dp" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/fq_mystery_me"/>
                </LinearLayout>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_user_nickname_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="3dp">
                    <com.tomatolive.library.p136ui.view.custom.UserNickNameGradeView android:id="@+id/user_nickname" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <ImageView android:id="@+id/iv_guard" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="3dp"/>
                </LinearLayout>
            </FrameLayout>
            <TextView android:textSize="12dp" android:textColor="@color/fq_text_gray" android:ellipsize="end" android:id="@+id/tv_diamond" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
