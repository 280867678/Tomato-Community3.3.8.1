<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@drawable/fq_shape_dialog_white_corner_bg" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="14sp" android:textColor="#ff272727" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/fq_hd_add_address"/>
    <LinearLayout android:orientation="vertical" android:background="@drawable/fq_hd_add_address_editbox_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp">
        <EditText android:textSize="14sp" android:gravity="start|top" android:id="@+id/et_address" android:background="@null" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="110dp" android:maxLength="150"/>
        <TextView android:textSize="12sp" android:textColor="#ff272727" android:layout_gravity="right" android:id="@+id/tv_num" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp"/>
    </LinearLayout>
    <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginTop="15dp">
        <TextView android:textSize="14sp" android:textColor="#272727" android:gravity="center" android:id="@+id/tv_cancel" android:background="@drawable/fq_hd_add_address_cancel_bg" android:layout_width="0dp" android:layout_height="37dp" android:text="@string/fq_btn_cancel" android:layout_weight="1"/>
        <TextView android:textSize="14sp" android:textColor="@color/colorWhite" android:gravity="center" android:id="@+id/tv_sure" android:background="@drawable/fq_hd_award_send_btn_bg" android:layout_width="0dp" android:layout_height="37dp" android:layout_marginLeft="31dp" android:text="@string/fq_btn_confirm" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
