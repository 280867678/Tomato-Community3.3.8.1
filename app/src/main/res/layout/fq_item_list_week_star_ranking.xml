            <TextView android:textSize="12sp" android:textColor="@color/fq_text_gray" android:id="@+id/tv_ranking_user" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="14sp" android:textColor="@color/fq_text_black" android:id="@+id/tv_receive_count" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textSize="12sp" android:textColor="@color/fq_text_gray" android:id="@+id/tv_contribution_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
