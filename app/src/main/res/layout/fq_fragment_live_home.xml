<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/fq_colorWhite" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/fl_content_view" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <View android:id="@+id/title_top_view" android:layout_width="match_parent" android:layout_height="0dp"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/fq_live_home_tab_height" android:layout_below="@+id/title_top_view" android:layout_alignParentBottom="true">
                <net.lucode.hackware.magicindicator.MagicIndicator android:id="@+id/magic_indicator" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginRight="10dp" android:layout_toLeftOf="@+id/iv_search"/>
                <ImageView android:id="@+id/iv_search" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:src="@drawable/fq_ic_home_search" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View android:id="@+id/v_line" android:background="@color/fq_view_divider_color" android:visibility="visible" android:layout_width="match_parent" android:layout_height="@dimen/fq_divider_height"/>
            <android.support.p002v4.view.ViewPager android:id="@+id/view_pager" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="@dimen/fq_live_home_margin_bottom" android:overScrollMode="never"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
