<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rl_top_view" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="12sp" android:textColor="@color/fq_colorWhite" android:gravity="center_vertical" android:id="@+id/tv_mirror_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/fq_mirror" android:drawableLeft="@drawable/fq_ic_anchor_mirror" android:drawablePadding="6dp" android:layout_centerVertical="true" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
        <TextView android:textSize="12sp" android:textColor="@color/fq_colorWhite" android:gravity="center_vertical" android:id="@+id/tv_camera_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/fq_camera_lens_switch" android:drawableLeft="@drawable/fq_ic_camera" android:drawablePadding="6dp" android:layout_toRightOf="@+id/tv_mirror_icon" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/iv_closed" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/fq_ic_live_close" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:paddingLeft="80dp" android:paddingRight="80dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_below="@+id/rl_top_view" android:layout_centerHorizontal="true">
        <RelativeLayout android:id="@+id/rl_upload_cover" android:background="@drawable/fq_shape_live_dashed_bg" android:layout_width="140dp" android:layout_height="140dp" android:layout_centerHorizontal="true">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/fq_icons_add" android:layout_centerInParent="true"/>
            <ImageView android:id="@+id/iv_upload_cover" android:layout_width="140dp" android:layout_height="140dp" android:scaleType="centerCrop"/>
        </RelativeLayout>
        <EditText android:textSize="@dimen/text_size_small" android:textColor="@color/fq_colorWhite" android:textColorHint="@color/fq_colorWhite" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/et_live_title" android:background="@drawable/fq_live_prepare_edit_bg" android:paddingLeft="15dp" android:paddingTop="6dp" android:paddingRight="15dp" android:paddingBottom="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:hint="@string/fq_input_title" android:maxLines="1" android:lines="1" android:singleLine="true" android:maxLength="20" android:drawableRight="@drawable/fq_ic_live_edit" android:layout_below="@+id/rl_upload_cover"/>
        <TextView android:textSize="@dimen/text_size_small" android:textColor="@color/fq_colorPrimary" android:textColorHint="@color/fq_colorWhite" android:gravity="center" android:id="@+id/tv_label_sort" android:background="@drawable/fq_live_prepare_edit_bg" android:paddingLeft="15dp" android:paddingTop="6dp" android:paddingRight="15dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:hint="@string/fq_select_classification" android:layout_below="@+id/et_live_title"/>
    </RelativeLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/tv_pay_type" android:layout_marginStart="16dp" android:layout_marginEnd="16dp">
        <TextView android:textSize="12sp" android:textColor="@color/fq_colorWhite" android:gravity="center" android:id="@+id/tv_beauty_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/fq_beauty" android:drawableTop="@drawable/fq_ic_beauty" android:drawablePadding="4dp"/>
        <TextView android:textSize="16sp" android:textColor="@color/fq_colorBtnTextPrimary" android:gravity="center" android:id="@+id/tv_start_live" android:background="@drawable/fq_btn_start_live_selector" android:layout_width="0dp" android:layout_height="wrap_content" android:minHeight="48dp" android:text="@string/fq_start_live" android:layout_weight="1" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
        <TextView android:textSize="12sp" android:textColor="@color/fq_colorWhite" android:gravity="center" android:id="@+id/tv_pay_setup" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/fq_pay_setup" android:maxLength="5" android:drawableTop="@drawable/fq_ic_anchor_pay" android:drawablePadding="4dp"/>
    </LinearLayout>
    <TextView android:textSize="10dp" android:textColor="@color/fq_colorBtnTextPrimary" android:gravity="center" android:id="@+id/tv_pay_type" android:background="@drawable/fq_shape_anchor_pay_type_bg" android:paddingTop="2dp" android:paddingBottom="2dp" android:layout_width="50dp" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_above="@+id/ll_protocol_bg" android:layout_alignParentRight="true" android:layout_marginEnd="16dp"/>
    <LinearLayout android:gravity="center_vertical" android:id="@+id/ll_protocol_bg" android:paddingLeft="@dimen/view_margin_10" android:paddingRight="@dimen/view_margin_10" android:paddingBottom="@dimen/view_margin_16" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true">
        <android.support.p005v7.widget.AppCompatCheckBox android:id="@+id/cb_protocol" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:button="@drawable/fq_ic_agree_selector"/>
        <TextView android:textSize="@dimen/text_size_small" android:textColor="@color/fq_colorWhite" android:gravity="center" android:id="@+id/tv_protocol" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_10" android:text="@string/fq_live_law_text"/>
    </LinearLayout>
</merge>
