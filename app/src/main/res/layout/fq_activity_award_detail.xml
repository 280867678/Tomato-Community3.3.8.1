            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        </LinearLayout>
        <RelativeLayout android:id="@+id/rl_tips_shadow_bg" android:background="@drawable/fq_shape_white_top_shadow_bg" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:paddingLeft="15dp" android:paddingTop="12dp" android:paddingRight="15dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <EditText android:textSize="14sp" android:textColorHint="#c4c4c4" android:gravity="start|center_vertical" android:id="@+id/et_input_message" android:background="@drawable/fq_hd_award_send_input_bg" android:paddingLeft="15dp" android:paddingTop="7dp" android:paddingRight="15dp" android:paddingBottom="7dp" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="@string/fq_hd_send_hint" android:maxLines="1" android:maxLength="150" android:layout_weight="1" android:inputType="text" android:imeOptions="actionSend" android:layout_marginEnd="10dp"/>
                    <TextView android:textSize="14sp" android:textColor="@color/fq_text_white_color" android:gravity="center" android:id="@+id/tv_send_btn" android:background="@drawable/fq_hd_award_send_btn_bg" android:paddingLeft="20dp" android:paddingTop="7dp" android:paddingRight="20dp" android:paddingBottom="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/fq_text_send_msg"/>
