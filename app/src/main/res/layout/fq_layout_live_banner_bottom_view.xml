        <ImageView android:id="@+id/iv_banner_close" android:visibility="invisible" android:layout_width="13dp" android:layout_height="13dp" android:layout_margin="1dp" android:src="@drawable/fq_ic_close" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ImageView android:layout_gravity="center_horizontal" android:id="@+id/iv_banner_arrow" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:src="@drawable/fq_ic_live_banner_arrow"/>
</merge>
