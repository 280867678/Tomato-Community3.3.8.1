    <com.tomatolive.library.p136ui.view.custom.TaskBoxView android:layout_gravity="right" android:id="@+id/task_view" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp"/>
    <RelativeLayout android:id="@+id/rl_banner_bottom_bg" android:visibility="visible" android:layout_width="@dimen/live_ad_banner_width" android:layout_height="@dimen/live_ad_banner_height">
