<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="70dp" android:layout_height="90dp">
    <ImageView android:id="@+id/iv_dot" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:src="@drawable/ucrop_oval_true" android:layout_centerHorizontal="true"/>
    <ImageView android:id="@+id/iv_photo" android:padding="4dp" android:layout_width="match_parent" android:layout_height="75dp" android:layout_margin="4dp" android:scaleType="centerCrop" android:layout_alignParentBottom="true"/>
    <ImageView android:id="@+id/iv_delete" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:src="@drawable/ucrop_ic_delete_photo" android:layout_alignParentRight="true"/>
</RelativeLayout>
