<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <TextView android:textSize="14dp" android:textColor="@color/fq_colorBlack" android:ellipsize="end" android:id="@+id/tv_nick_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="6dp" android:maxLines="1"/>
    <ImageView android:id="@+id/iv_gender" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp"/>
    <ImageView android:id="@+id/iv_badge" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp"/>
    <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <com.tomatolive.library.p136ui.view.custom.UserGradeView android:id="@+id/grade_view" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <com.tomatolive.library.p136ui.view.custom.AnchorGradeView android:id="@+id/anchor_grade_view" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </FrameLayout>
</LinearLayout>
