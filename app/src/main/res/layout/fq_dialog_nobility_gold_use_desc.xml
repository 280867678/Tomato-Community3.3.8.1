<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:background="@drawable/fq_shape_dialog_white_corner_bg" android:paddingLeft="16dp" android:paddingTop="16dp" android:paddingRight="16dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="14sp" android:textColor="@color/fq_text_black" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <View android:background="#fff4f4f4" android:layout_width="match_parent" android:layout_height="0.8dp" android:layout_marginLeft="20dp" android:layout_marginTop="12dp" android:layout_marginRight="20dp" android:layout_marginBottom="12dp"/>
        <TextView android:textSize="13sp" android:textColor="@color/fq_text_black" android:id="@+id/tv_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingExtra="3dp"/>
    </LinearLayout>
    <ImageView android:id="@+id/iv_close" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:src="@drawable/fq_ic_dialog_bottom_close"/>
</LinearLayout>
