<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:gravity="center_vertical" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/img" android:layout_width="50dp" android:layout_height="50dp"/>
    <TextView android:textSize="13sp" android:textStyle="bold" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:maxWidth="100dp" android:singleLine="true" android:layout_toRightOf="@+id/img"/>
    <TextView android:textSize="12sp" android:id="@+id/tv_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:maxWidth="120dp" android:singleLine="true" android:maxLength="12" android:layout_toRightOf="@+id/img" android:layout_below="@+id/tv_title"/>
    <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_toRightOf="@+id/tv_title" android:layout_alignParentRight="true" android:layout_centerVertical="true">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true">
            <ImageView android:id="@+id/btn_last" android:layout_width="25dp" android:layout_height="25dp" android:src="@mipmap/btn_last"/>
            <ImageView android:id="@+id/btn_center" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginLeft="20dp" android:src="@mipmap/btn_play"/>
            <ImageView android:id="@+id/btn_next" android:layout_width="25dp" android:layout_height="25dp" android:layout_marginLeft="20dp" android:src="@mipmap/btn_next"/>
            <ImageView android:id="@+id/btn_cancel" android:layout_width="22dp" android:layout_height="22dp" android:layout_marginLeft="20dp" android:src="@mipmap/btn_close"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
