<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/iv_bg" android:layout_width="match_parent" android:layout_height="150dp"/>
    <ImageView android:id="@+id/ib_close" android:layout_width="13dp" android:layout_height="13dp" android:layout_margin="12dp" android:src="@drawable/fq_ic_title_close_white_round" android:layout_alignParentRight="true"/>
    <RelativeLayout android:id="@+id/rl_root" android:background="@drawable/fq_shape_bottom_corners_white_bg_2" android:paddingLeft="20dp" android:paddingTop="13dp" android:paddingRight="20dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/iv_bg">
        <TextView android:textSize="16sp" android:textColor="@color/fq_text_black" android:gravity="center_horizontal" android:id="@+id/tv_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"/>
        <TextView android:textSize="14sp" android:textColor="#ffaeaeae" android:gravity="center_horizontal" android:id="@+id/tv_tips" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_below="@+id/tv_content" android:layout_centerHorizontal="true" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"/>
        <TextView android:textSize="16sp" android:textColor="@color/fq_colorWhite" android:gravity="center" android:id="@+id/tv_open_room" android:background="@drawable/fq_yellow_shape_nobility_open" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/view_margin_15" android:minHeight="40dp" android:text="@string/fq_open_nobility" android:layout_below="@+id/tv_tips" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
