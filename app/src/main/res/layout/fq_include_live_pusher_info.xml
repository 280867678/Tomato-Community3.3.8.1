        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:minHeight="90dp">
            <RelativeLayout android:layout_gravity="right" android:id="@+id/rl_game_notice_bg" android:paddingLeft="10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp">
                <RelativeLayout android:id="@+id/rl_pk_assist_king_bg" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true">
                    <TextView android:textSize="10dp" android:textColor="@color/fq_colorWhite" android:gravity="center_vertical" android:id="@+id/tv_pk_assist_king" android:background="@drawable/fq_ic_pk_top_anim_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:paddingStart="10dp" android:paddingEnd="15dp" android:layout_marginStart="30dp"/>
                    <ImageView android:layout_width="36dp" android:layout_height="36dp" android:src="@drawable/fq_ic_pk_top_anim_mvp"/>
                </RelativeLayout>
                <com.tomatolive.library.p136ui.view.custom.LiveGamePrizeView android:id="@+id/game_prize_view" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true"/>
