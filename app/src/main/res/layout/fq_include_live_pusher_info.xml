            <RelativeLayout android:layout_gravity="right" android:id="@+id/rl_top_notice_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="11sp" android:textColor="@color/fq_text_white_color" android:ellipsize="end" android:id="@+id/tv_top_notice" android:background="@drawable/fq_shape_live_top_notice_bg" android:paddingLeft="15dp" android:paddingTop="6dp" android:paddingRight="15dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:maxLines="1" android:layout_centerVertical="true"/>
                <ImageView android:id="@+id/iv_gift_img" android:layout_width="38dp" android:layout_height="38dp" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/rl_top_charm_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp">
                <TextView android:textSize="11sp" android:textColor="#4f0e0e" android:ellipsize="end" android:gravity="center" android:id="@+id/tv_top_charm_notice" android:background="@drawable/fq_charm_img_bg" android:paddingLeft="15dp" android:paddingTop="6dp" android:paddingRight="15dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:drawableLeft="@drawable/fq_icons_up" android:drawablePadding="10dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
