            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="5dp">
        <LinearLayout android:gravity="center" android:background="@drawable/fq_live_msg_title_bg" android:paddingLeft="8dp" android:paddingTop="3dp" android:paddingRight="8dp" android:paddingBottom="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/fq_live_margin_width" android:layout_centerVertical="true">
            <TextView android:textSize="12sp" android:textColor="@color/fq_text_white_color" android:gravity="center_vertical" android:id="@+id/tv_money" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableLeft="@drawable/fq_ic_live_top_cup" android:drawableRight="@drawable/fq_ic_anchor_tomato_arrow" android:drawablePadding="5dp"/>
        </LinearLayout>
        <com.tomatolive.library.p136ui.view.widget.AutoMarqueeTextView android:textSize="10dp" android:textColor="@color/fq_colorWhite" android:gravity="center" android:id="@+id/tv_charge_type" android:background="@drawable/fq_shape_pay_ticket_room_bg" android:visibility="invisible" android:layout_width="96dp" android:layout_height="wrap_content" android:minHeight="20dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:marqueeRepeatLimit="marquee_forever" android:paddingStart="8dp" android:paddingEnd="8dp" android:layout_marginEnd="@dimen/fq_live_margin_width"/>
