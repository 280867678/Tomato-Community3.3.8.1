            <RelativeLayout android:id="@+id/rl_luck_notice_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp">
                <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true">
                    <RelativeLayout android:id="@+id/rl_luck_middle_bg" android:background="@drawable/fq_shape_luck_notice" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/iv_luck_left_bg" android:layout_centerVertical="true">
                        <TextView android:textSize="10sp" android:textColor="@color/fq_colorWhite" android:gravity="left" android:id="@+id/tv_luck_tips" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:singleLine="true" android:layout_centerVertical="true"/>
