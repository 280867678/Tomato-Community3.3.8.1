                        <TextView android:textSize="10sp" android:textColor="#ff661700" android:id="@+id/tv_recommend_hot_tips" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
                        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:src="@drawable/fq_ic_nobility_live_recommend_hot" android:layout_toRightOf="@+id/tv_recommend_hot_tips" android:layout_centerVertical="true"/>
