            </RelativeLayout>
            <RelativeLayout android:id="@+id/rl_sys_notice_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp">
                <RelativeLayout android:id="@+id/rl_trumpet_notice_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true">
                    <TextView android:textSize="11sp" android:textColor="@color/fq_colorWhite" android:gravity="center_vertical" android:id="@+id/tv_nobility_trumpet" android:background="@drawable/fq_trumpet_notice_bg" android:paddingLeft="28dp" android:paddingTop="6dp" android:paddingRight="10dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_alignBottom="@+id/iv_trumpet_icon" android:layout_centerInParent="true"/>
