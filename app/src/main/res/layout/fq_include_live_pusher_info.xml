            <RelativeLayout android:id="@+id/rl_root" android:background="@drawable/fq_live_msg_title_bg" android:padding="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:id="@+id/iv_avatar" android:layout_width="@dimen/fq_online_user_avatar_size" android:layout_height="@dimen/fq_online_user_avatar_size" android:layout_marginRight="5dp" android:src="@drawable/fq_ic_placeholder_avatar" android:layout_centerVertical="true"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/ll_title_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:layout_toRightOf="@+id/iv_avatar" android:layout_centerVertical="true">
                    <TextView android:textSize="10sp" android:textColor="@color/fq_text_white_color" android:ellipsize="end" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="2dp" android:singleLine="true" android:includeFontPadding="false"/>
                    <TextView android:textSize="10sp" android:textColor="#f0c45b" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tv_member" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:includeFontPadding="false" android:maxLength="15" android:drawableLeft="@drawable/fq_ic_live_fire" android:drawablePadding="3dp" android:layout_toRightOf="@+id/iv_avatar" android:layout_below="@+id/tv_name"/>
