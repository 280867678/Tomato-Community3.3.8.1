<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/fq_shape_lottery_boom_bg" android:paddingLeft="15dp" android:paddingTop="8dp" android:paddingRight="25dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <ImageView android:id="@+id/iv_boom_icon" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginRight="6dp" android:layout_centerVertical="true"/>
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/iv_boom_icon">
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="12sp" android:textColor="@color/fq_text_white_color" android:id="@+id/tv_boom_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="3dp" android:text="@string/fq_lottery_boom"/>
            <TextView android:textSize="10sp" android:textColor="@color/fq_colorWhite" android:id="@+id/tv_boom_num" android:background="@drawable/fq_shape_red_corner_bg" android:paddingLeft="1dp" android:paddingRight="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="x15" android:includeFontPadding="false"/>
        </LinearLayout>
        <TextView android:textSize="10sp" android:textColor="#ffffb362" android:id="@+id/tv_countdown" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
