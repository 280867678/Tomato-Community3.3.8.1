<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="50dp" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/rl_item_layout" android:background="@drawable/fq_shape_stroke_wining_one_bg" android:layout_width="50dp" android:layout_height="50dp">
        <ImageView android:id="@+id/iv_item_logo" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="2dp" android:scaleType="centerCrop"/>
        <TextView android:textSize="9sp" android:textColor="@color/fq_colorWhite" android:id="@+id/tv_num" android:background="@drawable/fq_shape_red_corner_bg" android:paddingLeft="1dp" android:paddingRight="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:includeFontPadding="false" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView android:textSize="10sp" android:textColor="@color/fq_colorBlack29" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/tv_item_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:singleLine="true" android:includeFontPadding="false"/>
    <TextView android:textSize="10sp" android:textColor="#e66756" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/tv_gold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:maxWidth="50dp" android:singleLine="true" android:layout_below="@+id/tv_gift_name"/>
</LinearLayout>
