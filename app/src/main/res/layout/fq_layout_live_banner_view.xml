    <RelativeLayout android:id="@+id/rl_ad_bg" android:visibility="invisible" android:layout_width="@dimen/live_ad_banner_width" android:layout_height="60dp">
        <RelativeLayout android:layout_width="45dp" android:layout_height="60dp" android:layout_alignParentRight="true">
            <com.tomatolive.library.p136ui.view.widget.BannerWebView android:id="@+id/wv_vertical_ad" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="match_parent"/>
            <ImageView android:id="@+id/iv_ad" android:layout_width="match_parent" android:layout_height="match_parent"/>
        </RelativeLayout>
        <ImageView android:id="@+id/iv_ad_close" android:layout_width="13dp" android:layout_height="13dp" android:layout_margin="1dp" android:src="@drawable/fq_ic_close" android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>
