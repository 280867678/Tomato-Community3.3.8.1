<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@drawable/fq_shape_dialog_top_corner_black_bg" android:paddingTop="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:id="@+id/fl_view_pager_bg" android:layout_width="match_parent" android:layout_height="180dp">
        <com.tomatolive.library.p136ui.view.widget.MaxHeightViewPager android:id="@+id/view_pager" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:overScrollMode="never"/>
        <TextView android:textSize="14dp" android:textColor="@color/fq_text_white_color" android:layout_gravity="center" android:id="@+id/tv_loading_view" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/hint_text_dialog_loading_data"/>
        <TextView android:textSize="14dp" android:textColor="@color/fq_text_white_color" android:layout_gravity="center" android:id="@+id/tv_loading_fail" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/fq_data_loading_fail_retry"/>
    </FrameLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/ll_dot_bg" android:layout_width="match_parent" android:layout_height="10dp" android:layout_marginBottom="8dp" android:layout_below="@+id/fl_view_pager_bg"/>
</RelativeLayout>
