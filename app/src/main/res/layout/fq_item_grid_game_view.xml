<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_horizontal" android:orientation="vertical" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="40dp" android:layout_height="40dp">
        <ImageView android:id="@+id/iv_img" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/fq_ic_live_game_placeholder"/>
        <ImageView android:id="@+id/iv_dot" android:visibility="invisible" android:layout_width="8dp" android:layout_height="8dp" android:src="@drawable/fq_shape_white_frame_dot" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView android:textSize="12dp" android:textColor="@color/fq_colorWhite" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:singleLine="true"/>
</LinearLayout>
