<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/fq_include_activity_title_bar"/>
    <include layout="@layout/fq_include_divider_view"/>
    <android.support.p002v4.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:background="@color/fq_colorWhite" android:layout_width="match_parent" android:layout_height="120dp">
                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
                    <TextView android:textSize="28sp" android:textColor="@color/fq_colorMoneyPrimary" android:id="@+id/tv_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:text="0"/>
                </LinearLayout>
            </RelativeLayout>
            <include layout="@layout/fq_include_divider_view"/>
            <LinearLayout android:orientation="vertical" android:background="@color/fq_colorWhite" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="14sp" android:textColor="@color/fq_text_gray" android:id="@+id/tv_start_live_time" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp"/>
                <TextView android:textSize="14sp" android:textColor="@color/fq_text_gray" android:id="@+id/tv_end_live_time" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp"/>
                <TextView android:textSize="14sp" android:textColor="@color/fq_text_gray" android:id="@+id/tv_live_id" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp"/>
                <TextView android:textSize="14sp" android:textColor="@color/fq_text_gray" android:id="@+id/tv_live_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp"/>
                <TextView android:textSize="14sp" android:textColor="@color/fq_text_gray" android:id="@+id/tv_watch_count" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp"/>
                <TextView android:textSize="14sp" android:textColor="@color/fq_text_gray" android:id="@+id/tv_ticket" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp"/>
                <TextView android:textSize="14sp" android:textColor="@color/fq_text_gray" android:id="@+id/tv_live_times" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp"/>
                <TextView android:textSize="14sp" android:textColor="@color/fq_text_gray" android:id="@+id/tv_max_popularity" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.p002v4.widget.NestedScrollView>
</LinearLayout>
