<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/fl_content" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/ll_bottom" android:background="@color/chess_main_tab_bg" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/ll_home" android:layout_width="0dp" android:layout_height="50dp" android:layout_weight="1">
            <ImageView android:id="@+id/iv_home" android:layout_width="wrap_content" android:layout_height="0dp" android:src="@drawable/select_chess_main_tab_home" android:scaleType="centerInside" android:layout_weight="1"/>
            <TextView android:textSize="10sp" android:textColor="@color/chess_main_tab_text" android:id="@+id/tv_home" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_2" android:text="@string/chess_main_home"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/ll_recharge" android:layout_width="0dp" android:layout_height="50dp" android:layout_weight="1">
            <ImageView android:id="@+id/iv_recharge" android:layout_width="wrap_content" android:layout_height="0dp" android:src="@drawable/select_chess_main_tab_recharge" android:scaleType="centerInside" android:layout_weight="1"/>
            <TextView android:textSize="10sp" android:textColor="@color/chess_main_tab_text" android:id="@+id/tv_recharge" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_2" android:text="@string/chess_main_recharge"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/ll_app_market" android:layout_width="0dp" android:layout_height="50dp" android:layout_weight="1">
            <ImageView android:id="@+id/iv_app_market" android:layout_width="wrap_content" android:layout_height="0dp" android:src="@drawable/select_chess_main_tab_app_market" android:scaleType="centerInside" android:layout_weight="1"/>
            <TextView android:textSize="10sp" android:textColor="@color/chess_main_tab_text" android:id="@+id/tv_app_market" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_2" android:text="@string/chess_main_app_market"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/ll_app_share" android:layout_width="0dp" android:layout_height="50dp" android:layout_weight="1">
            <ImageView android:id="@+id/iv_app_share" android:layout_width="wrap_content" android:layout_height="0dp" android:src="@drawable/select_chess_main_tab_app_share" android:scaleType="centerInside" android:layout_weight="1"/>
            <TextView android:textSize="10sp" android:textColor="@color/chess_main_tab_text" android:id="@+id/tv_app_share" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_2" android:text="@string/chess_main_app_share"/>
        </LinearLayout>
        <FrameLayout android:id="@+id/ll_mine" android:layout_width="0dp" android:layout_height="50dp" android:layout_weight="1">
            <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                <ImageView android:id="@+id/iv_mine" android:layout_width="wrap_content" android:layout_height="0dp" android:src="@drawable/select_chess_main_tab_mine" android:scaleType="centerInside" android:layout_weight="1"/>
                <TextView android:textSize="10sp" android:textColor="@color/chess_main_tab_text" android:id="@+id/tv_mine" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_2" android:text="@string/chess_main_mine"/>
            </LinearLayout>
            <View android:layout_gravity="right" android:id="@+id/main_red_point" android:background="@drawable/common_shape_red_point" android:visibility="gone" android:layout_width="@dimen/dp_10" android:layout_height="@dimen/dp_10" android:layout_marginTop="@dimen/dimen_4" android:layout_marginRight="@dimen/dimen_10"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
