<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_horizontal" android:orientation="vertical" android:background="@drawable/fq_shape_week_star_rank_bg" android:paddingLeft="8dp" android:paddingTop="8dp" android:paddingRight="8dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:id="@+id/iv_gift" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginRight="2dp"/>
        <TextView android:textSize="12sp" android:textColor="@color/fq_text_black" android:id="@+id/tv_gift_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
    </LinearLayout>
    <View android:background="@color/fq_colorWhite" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"/>
    <RelativeLayout android:layout_width="56dp" android:layout_height="56dp">
        <ImageView android:id="@+id/iv_avatar" android:layout_width="56dp" android:layout_height="56dp"/>
        <ImageView android:id="@+id/iv_live" android:layout_width="15dp" android:layout_height="15dp" android:layout_alignBottom="@+id/iv_avatar" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView android:textSize="12sp" android:textColor="@color/fq_text_black" android:id="@+id/tv_anchor_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:singleLine="true" android:maxLength="10"/>
    <TextView android:textSize="10sp" android:textColor="@color/fq_text_gray" android:id="@+id/tv_contribution" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:singleLine="true" android:maxLength="10"/>
</LinearLayout>
